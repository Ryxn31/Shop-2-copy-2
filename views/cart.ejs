<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <title>Your Cart</title>
</head>
<body>
    <section id="header">
        <a href="#"><img src="images/Shop logo.png" class="logo" alt="logo" /></a>
        <div>
            <ul id="navbar">
                <li><a href="/">Home</a></li>
                <li><a href="/products">Shop</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
                <li>
                    <a class="active" href="/cart"><i class="fa-solid fa-bag-shopping"></i></a>
                </li>
            </ul>
        </div>
    </section>

    <h1 class="text-center">Your Cart</h1>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% cartItems.forEach(item => { %>
                    <tr>
                        <td><%= item.product.name %></td>
                        <td>$<%= item.product.price %></td>
                        <td>
                            <input type="number" value="<%= item.quantity %>" min="1" class="quantity" data-id="<%= item.product.id %>">
                        </td>
                        <td>$<%= (item.product.price * item.quantity).toFixed(2) %></td>
                        <td>
                            <button class="btn btn-danger remove-from-cart" data-id="<%= item.product.id %>">Remove</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <h3>Total: $<%= total.toFixed(2) %></h3>
        <button class="btn btn-primary" id="checkout">Checkout</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/cart.js"></script>
</body>
</html> 