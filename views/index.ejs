<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/78e90c8d77.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <title>Day to Day Shop</title>
</head>
<body>
    <!-- Header section -->
    <section id="header">
        <a href="#"><img src="images/Shop logo.png" class="logo" alt="logo" /></a>
        <div>
            <ul id="navbar">
                <li><a class="active" href="/">Home</a></li>
                <li><a href="/products">Shop</a></li>
                <li><a href="/contact">Contact</a></li>
                <a href="/cart/my-orders">My Orders</a>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
                <li>
                    <a href="/cart"><i class="fa-solid fa-bag-shopping"></i></a>
                </li>
            </ul>
        </div>
    </section>

    <!-- Hero section -->
    <section id="hero" class="text-center">
        <h4>Trade-In-Offer</h4>
        <h2>Super Value Details</h2>
        <h1>On All Products</h1>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
        <!-- <button class="btn btn-primary">Shop Now</button> -->
    </section>

    <!-- Featured products section -->
    <section id="product1" class="section-p1">
        <h1>Featured Products</h1>
        <p>Summer Collection New Modern Design</p>
        <div class="pro-container">
            <% products.forEach(function(product) { %>
                <div class="pro">
                    <img src="/<%= product.image %>" alt="<%= product.name %>" />
                    <div class="des">
                        <span><%= product.name %></span>
                        <h5><%= product.name %></h5>
                        <div class="star">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                        </div>
                        <h4>$<%= product.price %></h4>
                    </div>
                    <button class="btn btn-success add-to-cart" data-id="<%= product.id %>">Add to Cart</button>
                </div>
            <% }); %>
        </div>
    </section>
    
    <!-- Mini Cart Button -->
    <div id="cart-icon" style="position: fixed; top: 20px; right: 20px; cursor: pointer;">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#mini-cart-modal">
            ðŸ›’ View Cart (<span id="cart-count">0</span>)
        </button>
    </div>

    <!-- Mini Cart Modal -->
    <div class="modal fade" id="mini-cart-modal" tabindex="-1" aria-labelledby="miniCartLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="miniCartLabel">Your Cart</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="mini-cart-items">
                        <!-- Cart items will be dynamically populated here -->
                    </div>
                    <h4 id="mini-cart-total" class="mt-3"></h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer section -->
    <footer>
        <p>&copy; 2023 Day to Day Shop. All rights reserved.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/cart.js"></script>
</body>
</html>